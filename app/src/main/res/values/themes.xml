<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MTGInventoryApp" parent="Theme.Material3.Light">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_tint</item>
        <item name="colorOnPrimaryContainer">@color/blue_accent</item>
        
        <item name="colorSurface">@color/neutral_99</item>
        <item name="colorOnSurface">@color/neutral_10</item>
        <item name="colorSurfaceVariant">@color/neutral_95</item>
        <item name="colorOnSurfaceVariant">@color/neutral_50</item>
        
        <item name="colorBackground">@color/neutral_99</item>
        <item name="colorOnBackground">@color/neutral_10</item>
        
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
    </style>
    
    <!-- Dark theme variant -->
    <style name="Theme.MTGInventoryApp.Dark" parent="Theme.Material3.Dark">
        <item name="colorPrimary">@color/blue_accent</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/blue_tint</item>
        <item name="colorOnPrimaryContainer">@color/blue_accent</item>
        
        <item name="colorSurface">@color/neutral_10</item>
        <item name="colorOnSurface">@color/neutral_99</item>
        <item name="colorSurfaceVariant">@color/neutral_30</item>
        <item name="colorOnSurfaceVariant">@color/neutral_80</item>
        
        <item name="colorBackground">@color/neutral_10</item>
        <item name="colorOnBackground">@color/neutral_99</item>
    </style>
</resources>